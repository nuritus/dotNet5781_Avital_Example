<Window x:Class="dotNet5781_03B_0771_7072.DriveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_0771_7072"
        mc:Ignorable="d"
        Title="נסיעה" Height="225" Width="400"
        Icon="Icons2/busdetails.jpg">
    <Grid Background="{StaticResource myBackGround}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Content=":הכנס מרחק נסיעה רצוי" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" Foreground="#FFE6F3EC" FontWeight="Bold"/>
        <TextBox x:Name="driveDistance" Grid.Row="1" HorizontalAlignment="Center" Margin="88,0.2,94.6,97.2" Grid.RowSpan="2" Width="211" FontSize="16" 
                  PreviewKeyDown="TextBox_OnlyNumbers_PreviewKeyDown" KeyDown="checkIfEntetr"/>
    </Grid>
</Window>
