<UserControl x:Class="PlGui.userControls.TimeTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlGui.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox x:Name="timeTextBox" Text="{Binding Path=Text}" FontSize="{Binding Path=FontSize}" AllowDrop="False"
             PreviewKeyDown="timeTextBox_previewKeyDown" MaxLength="8" FontFamily="{Binding Path=FontFamily}"/>
</UserControl>
