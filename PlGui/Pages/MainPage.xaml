<Page x:Class="PlGui.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PlGui.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="MainPage" Background="#FFE0E2AF"  >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="/PlGui;component/Image/BusesImage.jpg" Stretch="Fill"/>
        <Grid Grid.RowSpan="2">
            <Button Height="100" Width="250"  Margin="75,245,475,104.6" Background="White" Opacity="0.5" Content="כניסת מנהל" FontSize="30"
                    FontWeight="Bold" Click="InsertManeger_Click"/>
            <Button Grid.RowSpan="2" Height="100" Width="250" Margin="475,245,75,104.6" Opacity="0.5" Background="White" Content="לוח זמנים בתחנה" 
                    FontSize="30" FontWeight="Bold" Click="TimesInStation_Click" />
            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="יציאה" Width="50" FontSize="15" Opacity="0.5" FontWeight="Bold"
                    Click="exitProgram_Click"/>
        </Grid>
    </Grid>
</Page>
